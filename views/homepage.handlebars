<div id='quiz-page' class="pt-8  shadow:lg w-screen mb-12 " data-user_id= {{user_id}}>
    <div class="flex flex-col items-center flex-1 h-full justify-center px-4 sm:px-0 h-160">

        <div
            class="flex flex-col text-center bg-gradient-to-r from-red-400 to-red-900  shadow-lg w-full sm:w-3/4 lg:w-1/2 bg-white sm:mx-0 ">
            <form class="quiz-form" onsubmit="event.preventDefault();">
                 {{#if loggedIn}}
                 <div id="quiz-title" class="text-4xl text-white-900 font-bold mt-14 ">
                    Welcome!
                </div>
                <div id="quiz-content" class="ml-12 mr-12 p-4 text-l text-white  mt-4 h-28">
                    Use main menu for navigation
                </div>
                <script>
                window.location.assign(window.location.href+"dashboard");
                 </script>    

                       {{else}}
                <div id="quiz-title" class="text-4xl text-white-900 font-bold mt-14 ">
                    Please Login
                </div>
                <div id="quiz-content" class="ml-12 mr-12 p-4 text-l text-white  mt-4 h-28">
                    Please log into you account
                </div>
                {{!-- --}}
               
                <div class="mt-16 mb-8">
                    <a href="/login" id="start-stop"
                        class="p-3 text-xl bg-yellow-200 text-blue-900 rounded-lg shadow-xs cursor-pointer hover:bg-yellow-500 hover:text-gray-100">
                        Login > </a>
                </div>
                            {{/if}}
            </form>
        </div>
    </div>
</div>
</div>
</div>
   <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
